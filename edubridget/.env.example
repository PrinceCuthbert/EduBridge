# EduBridge Environment Variables
# Copy this file to .env.local and fill in your actual values

# App Configuration
VITE_APP_NAME=EduBridge
VITE_APP_URL=http://localhost:5173

# API Configuration
VITE_API_BASE_URL=http://localhost:3000/api
VITE_API_TIMEOUT=30000

# Google OAuth (when ready to implement)
# Get from: https://console.cloud.google.com/apis/credentials
VITE_GOOGLE_CLIENT_ID=your-google-client-id-here

# Admin Emails - Comma-separated list of emails that should have admin access
VITE_ADMIN_EMAILS=admin@edubridge.africa,youremail@gmail.com

# WhatsApp Configuration
VITE_WHATSAPP_NUMBER=250798697809

# Feature Flags
VITE_ENABLE_GOOGLE_AUTH=false
VITE_ENABLE_MOCK_API=true

# Analytics (optional - add when ready)
# VITE_GA_TRACKING_ID=
# VITE_HOTJAR_ID=
